input {
  file {
    path => "/tmp/nginx.log"
    start_position => "beginning"
    sincedb_path => "/dev/null"
  }
}

filter {
  json {
    source => "message"
  }
  geoip {
    source => "remote_ip"
  }
  useragent {
    source => "agent"
    target => "useragent"
  }
}

output {
  opensearch {
    hosts => ["<%= @destination_url -%>"]
    index => "nginx-%{+YYYY.MM.dd}"
    user => "logstash"
    password => "logstash"
    ssl => true
    ssl_certificate_verification => false
  }
}